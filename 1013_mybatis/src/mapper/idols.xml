<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="idols"><!-- 네임스페이스에 테이블명 입력 -->

	<delete id="delete">
		DELETE idols
		WHERE idol_id = 5 
	</delete>
	<select id="select" resultType="string">
		SELECT name
		FROM idols
		LIMIT 1
	</select>


</mapper>